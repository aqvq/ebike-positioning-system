{
    "version": 3,
    "beforeBuildTasks": [],
    "afterBuildTasks": [],
    "global": {
        "use-microLIB": true,
        "output-debug-info": "enable"
    },
    "c/cpp-compiler": {
        "optimization": "level-fast",
        "language-c": "c99",
        "language-cpp": "c++11",
        "short-enums#wchar": true,
        "warnings": "no-warnings",
        "one-elf-section-per-function": true
    },
    "asm-compiler": {
        "$use": "asm-auto",
        "misc-controls": "--diag_suppress=1950"
    },
    "linker": {
        "output-format": "elf",
        "misc-controls": "--diag_suppress=L6329",
        "ro-base": "0x08000000",
        "rw-base": "0x20000000"
    }
}